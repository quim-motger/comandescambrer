<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:selectAllOnFocus="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="idi.jmotger.comandescambrer.FillOrderActivity"
    tools:showIn="@layout/activity_fill_order">

    <Button
        android:id="@+id/firstsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Primers plats"
        android:onClick="loadFirsts"/>

    <Button
        android:id="@+id/secondsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstsButton"
        android:text="Segons plats"
        android:onClick="loadSeconds"/>

    <Button
        android:id="@+id/drinksButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondsButton"
        android:text="Begudes"
        android:onClick="loadDrinks"/>

    <Button
        android:id="@+id/dessertsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drinksButton"
        android:text="Postres"
        android:onClick="loadDesserts"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/labelProducts"
        android:layout_below="@+id/dessertsButton"
        android:text="Productes de la comanda"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:textSize="18dp"
        android:textColor="#565656"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/labelProducts"
        android:id="@+id/separator"
        android:background="@android:color/darker_gray"/>

    <ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/separator"
        android:layout_marginTop="6dp"
        android:id="@+id/llista"/>

</RelativeLayout>
