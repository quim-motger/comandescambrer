<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="idi.jmotger.comandescambrer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewOrderActivity"
            android:label="@string/title_activity_new_order"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.MainActivity" />
        </activity>
        <activity
            android:name=".TodayCashActivity"
            android:label="@string/title_activity_today_cash"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.MainActivity" />
        </activity>
        <activity
            android:name=".ListOrdersActivity"
            android:label="@string/title_activity_list_orders"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.MainActivity" />
        </activity>
        <activity
            android:name=".StockActivity"
            android:label="@string/title_activity_stock"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.MainActivity" />
        </activity>
    </application>

</manifest>
