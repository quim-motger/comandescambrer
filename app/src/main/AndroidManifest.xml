<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="idi.jmotger.comandescambrer" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/my_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewOrderActivity"
            android:label="@string/title_activity_new_order"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.MainActivity" />
        </activity>
        <activity
            android:name=".TodayCashActivity"
            android:label="@string/title_activity_today_cash"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.MainActivity" />
        </activity>
        <activity
            android:name=".ListOrdersActivity"
            android:label="@string/title_activity_list_orders"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.MainActivity" />
        </activity>
        <activity
            android:name=".StockActivity"
            android:label="@string/title_activity_stock"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.MainActivity" />
        </activity>
        <activity
            android:name=".FillOrderActivity"
            android:label="@string/title_activity_fill_order"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.MainActivity" />
        </activity>
        <activity
            android:name=".LoadProductsOrder"
            android:label="@string/title_activity_load_firsts"
            android:parentActivityName=".FillOrderActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.FillOrderActivity" />
        </activity>
        <activity
            android:name=".OrderInfo"
            android:label="@string/title_activity_order_info"
            android:parentActivityName=".FillOrderActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.FillOrderActivity" />
        </activity>
        <activity
            android:name=".OrderInfoRead"
            android:label="@string/title_activity_order_info_read"
            android:parentActivityName=".TodayCashActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.TodayCashActivity" />
        </activity>
        <activity
            android:name=".NewProductActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_new_product"
            android:parentActivityName=".StockActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.StockActivity" />
        </activity>
        <activity
            android:name=".StockLoadProducts"
            android:label="@string/title_activity_stock_load_products"
            android:parentActivityName=".StockActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.StockActivity" />
        </activity>
        <activity
            android:name=".OrderInfoReadDate"
            android:label="@string/title_activity_order_info_read_date"
            android:parentActivityName=".ListOrdersActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.ListOrdersActivity" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="idi.jmotger.comandescambrer.MainActivity" />
        </activity>
    </application>

</manifest>
